{
    "version": "0.2.0", // نسخة إعدادات التشغيل (خاصة بـ VS Code)
    "configurations": [
      {
        "name": "DocDoc Development", // اسم الخيار اللي يظهر لك في VS Code
        "request": "launch",          // يعني شغل التطبيق
        "type": "dart",               // نوع المشروع: Flutter/Dart
        "program": "lib/main_development.dart", // ملف التشغيل الرئيسي
        "args": [
          "--flavor", "Development",            // حدد الـ flavor اسمه Development
          "--target", "lib/main_development.dart" // نفس الملف اللي راح يبدأ منه التشغيل
        ]
      },
      {
        "name": "DocDoc Production",
        "request": "launch",
        "type": "dart",
        "program": "lib/main_production.dart",
        "args": [
          "--flavor", "Production",
          "--target", "lib/main_production.dart"
        ]
      }
    ]
  }